{
    "compilerOptions": {
        "module": "none",
        "target": "esnext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "outDir": "build",
        "baseUrl": ".",
        "types": ["node", "jest"],
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2017"],
        "emitDecoratorMetadata": true,
        "declaration": true,
        "declarationDir": "build",
        "sourceMap": true,
        "inlineSources": true
    },
    "include": ["src/**/*"]
}
