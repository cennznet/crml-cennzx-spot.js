{
    "name": "root",
    "private": true,
    "engines": {
        "node": ">=10.13.0",
        "yarn": "^1.12.3"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "tslint -c tslint.json --project . && prettier --list-different './packages/**/src/*.ts'",
        "build": "plugnet-dev-build-ts",
        "test": "jest -c ./jest/jest.config.js --passWithNoTests --coverage spec",
        "test:e2e": "jest --runInBand --detectOpenHandles -c ./jest/jest.config.js e2e"
    },
    "devDependencies": {
        "@plugnet/dev": "^0.30.6",
        "@types/jest": "^24.0.15",
        "cpx": "^1.5.0",
        "cz-lerna-changelog": "^2.0.2",
        "husky": "^2.7.0",
        "jest": "24.8.0",
        "jest-environment-node": "^24.0.0",
        "lerna": "^3.13.2",
        "prettier": "^1.13.5",
        "pretty-quick": "^1.11.1",
        "ts-jest": "^24.0.0",
        "tslint": "^5.11.0",
        "tslint-microsoft-contrib": "^6.2.0"
    },
    "resolutions": {
        "braces": "^2.3.2",
        "fstream": "^1.0.12",
        "handlebars": "^4.1.2",
        "js-yaml": "^3.13.1",
        "marked": "^0.6.2",
        "mixin-deep": "^1.3.2",
        "set-value": "^2.0.1",
        "tar": "^4.4.8"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --pattern 'packages/**/src/**/*' && npx tslint -c tslint.json --project ."
        }
    }
}
